h4 because art tickles
ul(class='art-ticles')
	each article, slug in public.posts._data
		if article.status
			if article.languages
				each language in article.languages
					li
						a(href="/posts/#{ slug }-#{ language }") #{ article.title } ( #{ language } )
			else
				li
					a(href="/posts/#{ slug }") #{ article.title }
